<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE island [
        <!ELEMENT island (init|actions)*>
        <!ELEMENT init (heading|men|budget|contracts|time)*>
        <!ELEMENT heading (#PCDATA)>
        <!ELEMENT men (#PCDATA)>
        <!ELEMENT budget (#PCDATA)>
        <!ELEMENT contracts (contract)*>
        <!ELEMENT contract (amount|resource_name)*>
        <!ELEMENT amount (#PCDATA)>
        <!ELEMENT resource_name (#PCDATA)>
        <!ELEMENT time (#PCDATA)>
        <!ELEMENT actions (action)*>
        <!ELEMENT action (name|cost|parameters|result)*>
        <!ELEMENT name (#PCDATA)>
        <!ELEMENT cost (#PCDATA)>
        <!ELEMENT parameters (resource_name|direction|resource|amount|creek|people|range)*>
        <!ELEMENT direction (#PCDATA)>
        <!ELEMENT resource (amount|resource_name|condition|altitude)*>
        <!ELEMENT creek (#PCDATA)>
        <!ELEMENT people (#PCDATA)>
        <!ELEMENT range (#PCDATA)>
        <!ELEMENT result (found|range|amount|creeks|biomes|sites|report|resources|pois|production|kind)*>
        <!ELEMENT found (#PCDATA)>
        <!ELEMENT creeks (creek)*>
        <!ELEMENT biomes (biome)*>
        <!ELEMENT biome (#PCDATA)>
        <!ATTLIST biome
                percent CDATA #IMPLIED>
        <!ELEMENT sites (site)*>
        <!ELEMENT site (#PCDATA)>
        <!ELEMENT report (cell)*>
        <!ELEMENT cell (biome)*>
        <!ELEMENT resources (resource)*>
        <!ELEMENT condition (#PCDATA)>
        <!ELEMENT altitude (#PCDATA)>
        <!ELEMENT pois (poi)*>
        <!ELEMENT poi (#PCDATA)>
        <!ELEMENT production (#PCDATA)>
        <!ELEMENT kind (#PCDATA)>
        ]>
<island>
    <init>
        <heading></heading>
        <men></men>
        <budget></budget>
        <contracts>
            <contract>
                <amount></amount>
                <resource_name></resource_name>
            </contract>
        </contracts>
    </init>
    <actions>
        <action>
            <name></name>
            <cost></cost>
            <parameters>
                <resource_name></resource_name>
                <direction></direction>
                <resource></resource>
                <amount></amount>
                <creek></creek>
                <people></people>
                <range></range>
            </parameters>
            <result>
                <found></found>
                <range></range>
                <amount></amount>
                <creeks>
                    <creek></creek>
                </creeks>
                <biomes>
                    <biome></biome>
                </biomes>
                <sites>
                    <site></site>
                </sites>
                <report>
                    <cell>
                    <biome percent=""></biome>
                    </cell>
                </report>
                <resources>
                    <resource>
                        <amount></amount>
                        <resource_name></resource_name>
                        <condition></condition>
                        <altitude></altitude>
                    </resource>
                </resources>
                <pois>
                    <poi></poi>
                </pois>
                <production></production>
                <kind></kind>
            </result>
        </action>
    </actions>
</island>